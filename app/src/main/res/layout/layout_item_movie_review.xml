<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/layout_padding">

    <TextView
        android:id="@+id/tv_review_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text = "Little Victories"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/tv_read_more"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text = "@string/label_read_more_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_review_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#FF4081"/>

    <TextView
        android:id="@+id/tv_review_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_read_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="bold"
        tools:text = "Jumbit"/>

</android.support.constraint.ConstraintLayout>